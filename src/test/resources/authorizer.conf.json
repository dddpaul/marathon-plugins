{
  "roles": {
    "admin": {
      "actions": [
        "CreateGroup",
        "UpdateGroup",
        "DeleteGroup",
        "ViewGroup",
        "CreateApp",
        "UpdateApp",
        "DeleteApp",
        "ViewApp",
        "CreateResource",
        "UpdateResource",
        "DeleteResource",
        "ViewResource"
      ]
    },
    "operator": {
      "actions": [
        "ViewGroup",
        "ViewApp",
        "ViewResource",
        "UpdateGroup",
        "UpdateApp",
        "UpdateResource"
      ]
    },
    "guest": {
      "actions": [
        "ViewGroup",
        "ViewApp",
        "ViewResource"
      ]
    }
  },
  "permissions": {
    "ernie": [
      {
        "role": "admin",
        "path": "/"
      }
    ],
    "paul": [
      {
        "role": "guest",
        "path": "/"
      },
      {
        "role": "admin",
        "path": "corp-*"
      }
    ],
    "some-app-operator": [
      {
        "role": "operator",
        "path": "/some/app"
      }
    ],
    "wildcard-operator": [
      {
        "role": "operator",
        "path": "/some/app-.+"
      }
    ],
    "wildcard-guest": [
      {
        "role": "guest",
        "path": "/some/app[12]"
      }
    ],
    "roles_conflict": [
      {
        "role": "admin",
        "path": "/some/app"
      },
      {
        "role": "operator",
        "path": "/some/app"
      },
      {
        "role": "guest",
        "path": "/some/app"
      }
    ],
    "guest": [
      {
        "role": "guest",
        "path": "/"
      }
    ]
  }
}